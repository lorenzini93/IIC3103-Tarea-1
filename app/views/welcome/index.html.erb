<h1>¡¡ Bienvenido a tu página favorita de noticias !!</h1>

<p id="notice"><%= notice %></p>

<h1>Noticia</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Bajada</th>
      <th>Cuerpo</th>
      <th>Link</th>
      <th>Ncomentarios</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @noticia.each do |noticium| %>
      <tr>
        <td><%= noticium.titulo %></td>
        <td><%= noticium.bajada %></td>
        <td><%= noticium.cuerpo %></td>
        <td><%= noticium.link %></td>
        <td><%= noticium.nComentarios %></td>
        <td><%= link_to 'Show', noticium %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
